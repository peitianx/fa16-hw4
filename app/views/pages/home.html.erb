<h2> Cats </h2>
	<table>
			<tr>
				<th>name</th>
			</tr>
			<% @cats.each do |cat| %>
			<tr>
				<td><%= cat.name %></td>
			</tr>
			<% end %>
	</table>

<h2> Users </h2>
	<table>
		<tr>
			<th>username</th>
			<th>email</th>
			<th>age</th>
		</tr>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.username %></td>
			<td><%= user.email %></td>
			<td><%= user.age %></td>
		</tr>
		<% end %>
	</table>

<h2> Todos </h2>
	<table>
		<tr>
			<th>tasks</th>
			<th>finished</th>
		</tr>
		<% @todos.each do |todo| %>
		<tr>
			<td><%= todo.tasks %></td>
			<td><%= todo.finished %></td>
		</tr>
		<% end %>
	</table>


